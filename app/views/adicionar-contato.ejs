<% include parts/header %>
<h1>Adicionar contato</h1>
<form action="/adicionar-contato" method="POST">
  <div class="form-group">
    <label for="email">Nome</label>
    <input type="text" class="form-control" id="nome" placeholder="Nome do contato" name="nome" required>
  </div>
   <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" placeholder="name@example.com" name="email" required>
  </div>
   <div class="form-group">
    <label for="telefone">Telefone</label>
    <input type="text" class="form-control" id="telefone" placeholder="Telefone do contato" name="telefone" required>
  </div>
  <button type="submit" class="btn btn-outline-success">Adicionar contato</button>
  <a href="/"><button type="button" class="btn btn-outline-danger">Cancelar</button></a>
</form>

<% include parts/footer %>